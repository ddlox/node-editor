                            <StackPanel Grid.Row="0" Margin="0,0,0,0" Orientation="Horizontal" Height="30" VerticalAlignment="Top">
                                <Label Content="Discrepancy Time (ms):" Target="{Binding ElementName=partabdiscrepancytime}" ToolTip="A XAP ABSwitcher will allow two inputs to be slightly out of sync by this amount of time before considering them for switching." />
