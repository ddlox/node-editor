                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,0" Orientation="Horizontal" Height="30" VerticalAlignment="Top" >
                                <TextBox TextWrapping="Wrap" x:Name="partname_smart3src_svcid" Width="130" Height="22" HorizontalAlignment="Left" Margin="5,0,0,0" TextChanged="partname_smart3src_svcid_TextChanged" />
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>    
    </DockPanel>
</UserControl>
