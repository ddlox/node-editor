                                <TextBox x:Name="partabmasterreceivetimeout" Width="130" Height="22" HorizontalAlignment="Left" Margin="5,0,0,0" TextChanged="abpartmasterreceivetimeout_TextChanged" MaxLength="5" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>
        <Border DockPanel.Dock="Top" BorderThickness="1,5,1,0" CornerRadius="0,0,0,0" Opacity="1" >
            <DockPanel VerticalAlignment="Top" >
                <Border x:Name="smart3inputsourcedetails" DockPanel.Dock="Top" Margin="0,0,0,0" BorderThickness="0,0,0,0" CornerRadius="0,0,0,0" Padding="0,0,0,0" Height="90" Visibility="Hidden">
                    <StackPanel Background="{x:Null}" Margin="0,0,0,0" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*"/>
                                <ColumnDefinition Width="150*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="30" />
                                <RowDefinition Height="Auto" MinHeight="30" />
                                <RowDefinition Height="Auto" MinHeight="30" />
